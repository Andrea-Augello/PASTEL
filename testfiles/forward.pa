device a = localhost:1234;
device b = localhost:1235;
string end_msg = "bye
";
string message = "";

console(a);
console(b);
connect(a);
connect(b);


while(message != end_msg){
	send(a," > ");
	receive(a,message);
	send(b,message);
	if(message!=end_msg){
		send(b," > ");
		receive(b,message);
		send(a,message);
	}
}

disconnect(a);
disconnect(b);
quit(1);
